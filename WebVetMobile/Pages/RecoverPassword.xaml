<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WebVetMobile.Pages.RecoverPassword"
             Title="Recover Password">
    <Grid RowDefinitions="Auto,Auto,Auto,Auto"
         RowSpacing="20"
         Margin="20,150,20,40">

        <Image Grid.Row="0"
              Source="vet.png"
              Aspect="AspectFit"
              HeightRequest="100"
              WidthRequest="100" />
        <Label Grid.Row="1"
              Text="Login"
              FontAttributes="Bold"
              HorizontalOptions="Center" />

        <Frame Grid.Row="1"
              Padding="15"
              BackgroundColor="White">

            <VerticalStackLayout>

                <Entry Placeholder="Email"
                      x:Name="EntEmail" />

                
            </VerticalStackLayout>
        </Frame>

        <Button Grid.Row="2"
               Text="Send"
               FontSize="Medium"
               x:Name="BtnSend" 
               BackgroundColor="#a90409"
               Clicked="BtnSend_Clicked"/>



    </Grid>
</ContentPage>